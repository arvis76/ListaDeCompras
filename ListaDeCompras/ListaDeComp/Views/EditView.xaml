<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels ="clr-namespace:ListaDeCompras.ListaDeComp.ViewModels"
             x:DataType="{x:Type viewmodels:EditViewModel}"
             x:Class="ListaDeCompras.ListaDeComp.Views.EditView"
             Title="Cambiar ">
    
    <VerticalStackLayout Margin="20">
        <Label Text="Activity" />
        <Entry Text="{Binding Item.Item}"/>
        <Button Text="Save" Command="{Binding UpdateCommand}" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>